{
  "name": "design-system-wordpress-child-theme-ti-corp",
  "version": "1.2.0",
  "description": "TI-Corp Child Theme",
  "author": "govwordpress@gov.bc.ca",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Block Theme",
    "BCGov",
    "DesignSystem",
    "Gutenberg"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/design-system-wordpress-child-theme-ti-corp.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/design-system-wordpress-theme#readme",
    "email": "govwordpress@gov.bc.ca"
  },
  "engines": {
    "node": "^24.12.0"
  },
  "main": "index.js",
  "devDependencies": {
    "@bcgov/wordpress-eslint": "git+https://github.com/bcgov/wordpress-eslint.git#semver:1.x",
    "@bcgov/wordpress-stylelintrc": "git+https://github.com/bcgov/wordpress-stylelintrc.git#semver:1.x",
    "@wordpress/base-styles": "^5.7.0",
    "@wordpress/scripts": "^28.6.0"
  },
  "scripts": {
    "build": "npm i && wp-scripts build",
    "build:production": "npm ci && npm run fix:css && npm run fix:md && npm run test:unit && npm run build",
    "lint:css": "wp-scripts lint-style 'src/**/*.scss' --allow-empty-input",
    "fix:css": "wp-scripts lint-style 'src/**/*.scss' --fix --allow-empty-input",
    "lint:js": "wp-scripts lint-js '{src,tests}/**/*.{js,ts}'",
    "fix:js": "wp-scripts lint-js '{src,tests}/**/*.{js,ts}' --fix",
    "test": "wp-scripts test-unit-js --passWithNoTests",
    "test:e2e": "wp-scripts test-playwright",
    "test:e2e:help": "wp-scripts test-playwright --help",
    "test:e2e:debug": "wp-scripts test-playwright --debug",
    "test:e2e:headed": "wp-scripts test-playwright --headed",
    "test:unit:php": "wp-env run tests-cli --env-cwd=wp-content/plugins/design-system-wordpress-plugin composer run test",
    "wp-env": "wp-env"
  }
}
